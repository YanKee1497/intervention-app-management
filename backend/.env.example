# Variables d'environnement pour l'application de gestion des demandes d'intervention

# Base de données
DB_PATH=./database/intervention_app.db

# JWT Secret (CHANGER EN PRODUCTION)
JWT_SECRET=your-very-secure-secret-key-change-in-production

# Configuration du serveur
PORT=5000
NODE_ENV=development

# Frontend URL (pour CORS)
FRONTEND_URL=http://localhost:3000

# Configuration email (optionnel pour les notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password

# Dossier pour les fichiers uploadés
UPLOAD_DIR=./uploads
